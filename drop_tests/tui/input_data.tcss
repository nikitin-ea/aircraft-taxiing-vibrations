PreProc {
    layout: vertical;
}

#container-load-parameters {
    border: double royalblue;
    height: 12;
}

#container-file-results {
    border: double royalblue;
    height: 12;
}

#container-test-parameters {
    layout: grid;
    grid-size: 3 2;
    border: double royalblue;
    height: 12;
}

#container-analysis {
    layout: grid;
    grid-size: 2 1;
    grid-columns: 2fr 1fr;
    height: 7;
    border: double royalblue;
}

#subcontainer-progressbar{
    layout: horizontal;
    align: left middle;
}

#subcontainer-analysis {
    layout: horizontal;
    align: right middle;
}

#button-checker {
    background: gold;
    margin: 1;
}

#button-analysis {
    background: limegreen;
    margin: 1;
}

ProgressBar{
    align: left middle;
    width: 80;
    margin: 1
}

PostProc {
    layout: vertical;
}
#container-datatable{
    align: center top;
    border: double royalblue;
    padding: 0;
    min-height: 40vh;
}

DataTable{
    align: center top;
    margin: 0;
}

Logger {
    border: double royalblue;
    border-title-align: center;
    padding: 1;
}

Help {
    align: center middle;
}

PopUpScreenMessage {
    align: center middle;
    background: rgba(65, 105, 225, 0.5);
}
.msg-button {
    content-align: center middle;
    width: 100%;
}
#dialog {
    layout: vertical;
    padding: 0;
    width: 60;
    height: 11;
    border: thick $background 80%;
    background: $surface;
}
#question {
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

PopUpScreenChoice {
    align: center middle;
    background: rgba(65, 105, 225, 0.5);
}
.msg-button-choice {
    width: 100%;
}
#dialog {
    grid-size: 2;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 11;
    border: thick $background 80%;
    background: $surface;
}
#question {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

LabeledInput {
    padding-top: 1;
    padding-bottom: 1;
    layout: horizontal;
    height: auto;
}
LabeledInput Label {
    padding: 1;
    width: 1fr;
    text-align: left;
    align: left middle;
}
LabeledInput Input {
    width: 18;
}

InputWithAction {
    layout: horizontal;
    height: auto;
    padding: 1;
}
InputWithAction Label {
    padding: 1;
    width: 35;
    text-align: left;
}
InputWithAction Input {
    width: 1fr;
}

InputWithAction Button {

}
.succeeded {
    background: $success;
    color: $text;
}
.failed {
    background: $error;
    color: $text;
}

AppLogo {
    layout: horizontal;
    background: $boost;
    margin: 1;
    height: auto;
    opacity: 0.0;
}
#app-logo {
    color: royalblue;
    border: double royalblue;
    text-align: left;
    height: auto;
}
#app-info {
    align: left middle;
    text-align: left;
}

TabbedContent{
    opacity: 0.0;
}